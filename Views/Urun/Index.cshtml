@model IEnumerable<Odev.Models.Model.Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }

        );
}   );
</script>


<h2>Urunler</h2>
<a class="btn btn-default" href="/Urun/Create/">Yeni Ekle</a>
<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>ResimURL</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.UrunId</td>
            <td>@item.Baslik</td>
            <td>@Html.Raw(item.Aciklama)</td>
            <td><img width="100" height="100" src="@item.ResimURL" /></td>
            <td><a href="/Urun/Edit/@item.UrunId">Düzenle</a> | <a href="/Urun/Delete/@item.UrunId">Sil</a></td>
        </tr>
        }


    </tbody>
</table>
